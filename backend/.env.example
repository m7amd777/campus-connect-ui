# Environment Variables for Campus Connect Backend
# Copy this file to .env and update the values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/campus_connect
# For MongoDB Atlas, use: mongodb+srv://username:password@cluster.mongodb.net/campus_connect

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-make-it-long-and-random
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Email Configuration (if using email features)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload Configuration (if using file uploads)
MAX_FILE_SIZE=5242880  # 5MB in bytes
UPLOAD_PATH=./uploads

# Production Environment Flag
ENVIRONMENT=development  # Change to 'production' for production deployment